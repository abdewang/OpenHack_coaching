{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "Southridge-Data-Source-to-ADLS"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/CopyPipeline_3q7')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "Copy from cloudsales to reportingdb",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [
							{
								"name": "Source",
								"value": "cloudsales/dbo/dboAddresses.txt"
							},
							{
								"name": "Destination",
								"value": "dbo.CloudSalesAddresses"
							}
						],
						"typeProperties": {
							"source": {
								"type": "DelimitedTextSource",
								"storeSettings": {
									"type": "AzureBlobFSReadSettings",
									"recursive": true,
									"maxConcurrentConnections": 5
								},
								"formatSettings": {
									"type": "DelimitedTextReadSettings",
									"skipLineCount": 0
								}
							},
							"sink": {
								"type": "AzureSqlSink"
							},
							"enableStaging": false,
							"enableSkipIncompatibleRow": true,
							"translator": {
								"type": "TabularTranslator",
								"mappings": [
									{
										"source": {
											"name": "AddressID",
											"type": "String"
										},
										"sink": {
											"name": "AddressID",
											"type": "Guid"
										}
									},
									{
										"source": {
											"name": "CreatedDate",
											"type": "String"
										},
										"sink": {
											"name": "CreatedDate",
											"type": "DateTime"
										}
									},
									{
										"source": {
											"name": "UpdatedDate",
											"type": "String"
										},
										"sink": {
											"name": "UpdatedDate",
											"type": "DateTime"
										}
									},
									{
										"source": {
											"name": "CustomerID",
											"type": "String"
										},
										"sink": {
											"name": "CustomerID",
											"type": "Guid"
										}
									},
									{
										"source": {
											"name": "AddressLine1",
											"type": "String"
										},
										"sink": {
											"name": "AddressLine1",
											"type": "String"
										}
									},
									{
										"source": {
											"name": "AddressLine2",
											"type": "String"
										},
										"sink": {
											"name": "AddressLine2",
											"type": "String"
										}
									},
									{
										"source": {
											"name": "City",
											"type": "String"
										},
										"sink": {
											"name": "City",
											"type": "String"
										}
									},
									{
										"source": {
											"name": "State",
											"type": "String"
										},
										"sink": {
											"name": "State",
											"type": "String"
										}
									},
									{
										"source": {
											"name": "ZipCode",
											"type": "String"
										},
										"sink": {
											"name": "ZipCode",
											"type": "String"
										}
									}
								]
							}
						},
						"inputs": [
							{
								"referenceName": "SourceDataset_3q7",
								"type": "DatasetReference"
							}
						],
						"outputs": [
							{
								"referenceName": "DestinationDataset_3q7",
								"type": "DatasetReference"
							}
						]
					}
				],
				"folder": {
					"name": "Copy from CloudSales to DW"
				},
				"annotations": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/SourceDataset_3q7')]",
				"[concat(variables('factoryId'), '/datasets/DestinationDataset_3q7')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/DestinationDataset_3q7')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "AzureSqlDatabase1",
					"type": "LinkedServiceReference"
				},
				"folder": {
					"name": "Cloudsales to DW"
				},
				"annotations": [],
				"type": "AzureSqlTable",
				"schema": [
					{
						"name": "AddressID",
						"type": "uniqueidentifier",
						"precision": 0,
						"scale": 0
					},
					{
						"name": "CreatedDate",
						"type": "date",
						"precision": 10,
						"scale": 0
					},
					{
						"name": "UpdatedDate",
						"type": "date",
						"precision": 10,
						"scale": 0
					},
					{
						"name": "CustomerID",
						"type": "uniqueidentifier",
						"precision": 0,
						"scale": 0
					},
					{
						"name": "AddressLine1",
						"type": "varchar",
						"precision": 0,
						"scale": 0
					},
					{
						"name": "AddressLine2",
						"type": "varchar",
						"precision": 0,
						"scale": 0
					},
					{
						"name": "City",
						"type": "varchar",
						"precision": 0,
						"scale": 0
					},
					{
						"name": "State",
						"type": "char",
						"precision": 0,
						"scale": 0
					},
					{
						"name": "ZipCode",
						"type": "char",
						"precision": 0,
						"scale": 0
					}
				],
				"typeProperties": {
					"schema": "dbo",
					"table": "CloudSalesAddresses"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/SourceDataset_3q7')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "Cloud_sales_AzureDataLakeStorage_Linked_services",
					"type": "LinkedServiceReference"
				},
				"folder": {
					"name": "Cloudsales to DW"
				},
				"annotations": [],
				"type": "DelimitedText",
				"typeProperties": {
					"location": {
						"type": "AzureBlobFSLocation",
						"fileName": "dboAddresses.txt",
						"folderPath": "dbo",
						"fileSystem": "cloudsales"
					},
					"columnDelimiter": ",",
					"escapeChar": "\\",
					"firstRowAsHeader": true,
					"quoteChar": "\""
				},
				"schema": []
			},
			"dependsOn": []
		}
	]
}